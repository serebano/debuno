{
  "name": "debuno",
  "version": "0.1.24",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/serebano/debuno.git"
  },
  "homepage": "https://debuno.dev",
  "description": "Bring Deno module resolution to Bun & Node",
  "scripts": {
    "build": "./build/build.ts",
    "dev:node": "./bin/node --watch example/app.ts",
    "dev:bun": "./bin/bun --watch example/app.ts",
    "x": "dbn info",
    "prepare": "husky"
  },
  "bin": {
    "debuno": "bin/debuno"
  },
  "exports": {
    ".": {
      "bun": "./bun/index.ts",
      "node": "./node/index.js"
    },
    "./register": {
      "bun": "./bun/register.ts",
      "node": "./node/register.js"
    },
    "./api": {
      "bun": "./shared/api.ts",
      "deno": "./shared/api.ts",
      "types": "./shared/api.ts",
      "import": "./dist/shared/api.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "v22"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
